<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="first.alexander.com.car2park.DestinationViewActivity">


    <TextView
        android:id="@+id/tvDestinationViewActivityTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destination Information"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />

    <fragment
        android:id="@+id/streetviewpanorama_fragment"
        android:name="com.google.android.gms.maps.StreetViewPanoramaFragment"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="180dp"
        android:layout_below="@+id/tvParkingInfo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tvDestinationInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="TextView"
        android:layout_below="@+id/tvDestinationViewActivityTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp" />

    <info.hoang8f.widget.FButton
        android:id="@+id/btnSaveDestination"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="left|top"
        android:text="  Save Destination  "
        android:textSize="15dp"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        fbutton:buttonColor="@color/fbutton_color_amethyst"
        fbutton:shadowEnabled="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/tvDestinationInfo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="17dp" />


</RelativeLayout>
